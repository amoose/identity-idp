Attribute:
  enabled: false
FeatureEnvy:
  exclude:
    - 'track_registration'
DuplicateMethodCall:
  exclude:
    - UserFlashUpdater
    - Users::PhoneConfirmationController
    - Users::RegistrationsController
IrresponsibleModule:
  enabled: false
NilCheck:
  exclude:
    - Users::PhoneConfirmationController
TooManyStatements:
  max_statements: 7
TooManyMethods:
  exclude:
    - Devise::TwoFactorAuthenticationController
    - Users::ConfirmationsController
    - ServiceProvider
UncommunicativeMethodName:
  exclude:
    - Users::PhoneConfirmationController
UnusedPrivateMethod:
  exclude:
    - ApplicationController
    - ActiveJob::Logging::LogSubscriber
    - Users::PhoneConfirmationController
UtilityFunction:
  exclude:
    - AnalyticsEventJob#perform
    - SmsSenderConfirmationJob
exclude_paths:
  - db/migrate
  - spec/**/*
